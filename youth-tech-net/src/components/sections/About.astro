---
interface Props {
  title: string
}

const site = Astro.site
const { title } = Astro.props
---
<div id="about" class="w-full min-h-screen flex flex-col justify-center items-center py-12">
  <div class="self-center text-center w-full sm:w-2/3 xl:w-1/2 px-4 sm:px-0">
    <h2 class="font-bold tracking-wider text-royalOrchid text-4xl mb-4">{title}</h2>
    <div class="font-light text-gray-700 text-xl">
      <slot />
    </div>
    <img class="my-12 max-w-full mx-auto" src={`${site}img/biglogo.png`} alt="YouthTechNet">
  </div>
  <div class="flex flex-row w-full justify-center">
    <a class="px-10 py-2 text-gray-200 bg-royalOrchid rounded-full shadow-md text-lg hover:bg-vividTangerine hover:border-vividTangerine hover:text-gray-800" href="#features">See Our Work</a>
  </div>
</div>

---
import features from '../../data/features.json'

interface Props {
  afterTitle?: string,
  title: string
}

const site = Astro.site
const { afterTitle, title } = Astro.props
---
<div id="features" class="w-full min-h-screen flex flex-col justify-center items-center bg-gray-50 py-12 sm:py-20">
  <div class="w-full md:w-5/6 xl:w-2/3 px-4 sm:px-8">
    <h2 class="tracking-wide text-royalOrchid font-bold text-4xl mb-6 text-center">{title}</h2>
    <div class="flex flex-col lg:flex-row items-center gap-8 lg:gap-12">
      <!-- Image on the left -->
      <div class="w-full lg:w-1/2">
        <div class="rounded-lg shadow-lg overflow-hidden">
          <img src={`${site}img/HannaBarakat -ArchivalImages of AI + AIxDESIGNWovenCircuit -1280x889.png`} alt="Woven Circuit - An artistic representation of interconnected networks" class="w-full h-auto">
        </div>
        <p class="text-sm text-gray-500 mt-2 text-center">
          <a href="www.hbarakat.com" class="hover:text-royalOrchid" target="_blank" rel="noopener">Hanna Barakat</a> &
          <a href="https://aixdesign.co/posts/archival-images-of-ai" class="hover:text-royalOrchid" target="_blank" rel="noopener">Archival Images of AI + AIxDESIGN</a> /
          <a href="https://betterimagesofai.org/images?artist=HannaBarakat&title=WovenCircuit" class="hover:text-royalOrchid" target="_blank" rel="noopener">Woven Circuit</a> /
          <a href="https://creativecommons.org/licenses/by/4.0/" class="hover:text-royalOrchid" target="_blank" rel="noopener">Licensed by CC-BY 4.0</a>
        </p>
      </div>

      <!-- Content on the right -->
      <div class="w-full lg:w-1/2">
        <div class="font-light text-gray-700 text-xl mb-8">
          <slot />
        </div>

        <!-- Hub activities list -->
        <div class="space-y-6">
          {features.map((feat) => (
            <div class="flex gap-4">
              <div class="flex-shrink-0">
                <img src={`${site}img/features/${feat.icon}`} alt={feat.title} class="w-12 h-12" />
              </div>
              <div>
                <h3 class="tracking-wide text-royalOrchid font-bold text-xl mb-2">{feat.title}</h3>
                <p class="font-light text-gray-600 text-base">
                  {feat.content}
                </p>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>

    <!-- Call to action -->
    <div class="text-center mt-12">
      {afterTitle && <h3 class="font-bold tracking-widest text-royalOrchid text-2xl mb-6">{afterTitle}</h3>}
      <a class="inline-block px-10 py-3 text-gray-200 bg-royalOrchid rounded-full shadow-md text-lg hover:bg-vividTangerine hover:border-vividTangerine hover:text-gray-800 transition-all" href="#register">Join Now</a>
    </div>
  </div>
</div>
